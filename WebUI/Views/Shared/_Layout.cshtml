<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/ErrorStyles.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
    <style>
        .navbar-right {
            float: right !important;
            margin-right: 15px;
            margin-left: 15px;
        }
    </style>
</head>
<body style="background-image: url('../../Images/Wiki-background.jpg');background-position: center" class="row panel">
    <div style="background-image: url('../../Images/background.png');background-position: center" class="navbar navbar-inverse center-block" role="navigation">

        <a class="navbar-brand" href="#" style="color: white; font: bold 25px arial;" ;>
            <span class="hidden-xs"> @Html.ActionLink("DotaStore - магазин лесных предметов Dota 2!", "List", "Item", new { Style = "color: white; font: bold 25px arial;" })</span>
            
            

        </a>
        @Html.Action("Summary", "Cart")
    </div>
    <div class="visible-xs">
        @Html.Action("Menu", "Nav", new { horizontalNav = true })
    </div>

    <div style="background-image: url('../../Images/Wiki-background.jpg');background-position: center" class="row panel">
        <div  id="categories" class="col-sm-3 hidden-xs">
            @Html.Action("Menu", "Nav")
        </div>
        <div   class="col-xs-12 col-sm-8">
            @RenderBody()
        </div>
    </div>
  
</body>
</html>